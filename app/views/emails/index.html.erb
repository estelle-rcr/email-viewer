<div class="mx-1 my-1 pt-0 px-2">
  <div class="d-flex justify-content-start mx-2 my-4 pt-0">
    <h1 class="mt-1 mb-1"> Welcome!</h1>
  </div>
</div>
<div class="d-flex flex-row justify-content-between mx-2 my-2">
<h4 class="text-center mt-4 mb-2">ðŸ‘‰ Your emails: </h4>
<div class="d-flex justify-content-start my-3 mx-3">
<%= render 'email_form' %>
</div>
</div>

<div class="row mx-3 my-4 d-flex flex-column-reverse flex-md-row ">
  <div class="col-12 col-md-7 my-2">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Object</th>
          <th scope="col">Preview content</th>
        </tr>
      </thead>
      <tbody id="email-table">
        <% @emails.sort_by(&:created_at).each do |email| %>
        <tr id="row_<%=email.id%>">
          <th scope="row"><%=email.id%></th>                
          <td class="object"><%= link_to email_path(:id => email.id), method:"get", remote:"true", data: { params: {read: "true"}.to_param } do%><%= email.object %><% end %></td>
          <td class="body"><%= email.body[0..50] %>...</td>
        </tr>
        <%end %>
      </tbody>
    </table>
  </div>
  <div class="col-12 col-md-5 bg-light px-2 my-2" id='show-email'>
  </div>
</div>


